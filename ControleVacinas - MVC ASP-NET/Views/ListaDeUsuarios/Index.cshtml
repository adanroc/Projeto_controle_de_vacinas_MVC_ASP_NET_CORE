@model List<ListaDeUsuariosModel>
@{
    ViewData["Title"] = "Lista de usuários";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary role="button" asp-controller="ListaDeUsuarios" asp-action="Cadastrar" >Adicionar novo usuário</a>
    </div>

    <br />

    @if(TempData["MensagemSucesso"] != null)
    {
        <div id="alert-box" class="alert alert-success custom-alert" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div id="alert-box" class="alert alert-danger custom-alert" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
            @TempData["MensagemErro"]
        </div>
    }    

    <br />

<h1 class="display-4">Lista de usuários</h1>

    <table class="table table-striped table-hover table-bordered table-sm" id="TabelaListaDeUsuarios">
        <thead>
            <tr>
                <th scope="col">#</th>                
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">Email</th>
                <th scope="col">Perfil</th>
                <th scope="col">Total de Cadastros</th>
                <th scope="col">Data de cadastro</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @if(Model !=null && Model.Any())
            {
                foreach (ListaDeUsuariosModel listaDeUsuariosModel in Model)
                {
                    <tr>
                        <th scope="row">@listaDeUsuariosModel.Id</th>                        
                        <td>@listaDeUsuariosModel.Nome</td>
                        <td>@listaDeUsuariosModel.Login</td>
                        <td>@listaDeUsuariosModel.Email</td>
                        <td>@(listaDeUsuariosModel.Perfil == ControleVacinas___MVC_ASP_NET.Enums.PerfilEnum.Admin ? "Administrador" : "Padrão")</td>
                        <td>
                            <a href="javascript:" class="btn btn-success btn-sm btn-total-cadastros" usuario-id="@listaDeUsuariosModel.Id">
                                @(listaDeUsuariosModel.ListaDeCadastros != null && listaDeUsuariosModel.ListaDeCadastros.Any() ? listaDeUsuariosModel.ListaDeCadastros.Count() : 0)
                            </a>
                        </td>
                        <td>@listaDeUsuariosModel.DataCadastro</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-secondary" asp-route-id="@listaDeUsuariosModel.Id" asp-controller="ListaDeUsuarios" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@listaDeUsuariosModel.Id" asp-controller="ListaDeUsuarios" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>                    
                }
            }
            else
            {
                <tr class="odd"><td valign="top" colspan="8">Nenhum usuário encontrado!</td></tr>
            }
        </tbody>
    </table>

    <div id="modalListaDeCadastrosDoUsuario" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Lista de Cadastros</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="listaDeCadastrosDoUsuario"></div>
                </div>
            </div>
        </div>
    </div>

</div>

