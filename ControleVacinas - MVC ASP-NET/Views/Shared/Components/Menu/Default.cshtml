@model ListaDeUsuariosModel
@{
}

<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" placeholder="Página Inicial">Olá, @Model.Nome</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>

<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <!-- Itens à esquerda -->
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="ListaDeCadastros" asp-action="Index" placeholder="Lista de Cadastros"><i class="bi bi-people icon-spacing"></i>Lista de Cadastros</a>
        </li>
        @if(Model.Perfil == ControleVacinas___MVC_ASP_NET.Enums.PerfilEnum.Admin)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="ListaDeUsuarios" asp-action="Index" placeholder="Lista de Usuários"><i class="bi bi-person-badge icon-spacing"></i>Lista de Usuários</a>
            </li>
        }
    </ul>
    <!-- Itens à direita -->
    <ul class="navbar-nav ms-auto">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="AlterarSenha" asp-action="Index" placeholder="Alterar Senha"><i class="bi bi-lock icon-spacing"></i>Alterar Senha</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Sair" placeholder="Sair"><i class="bi bi-box-arrow-right icon-spacing"></i>Sair</a>
        </li>
    </ul>
</div>

