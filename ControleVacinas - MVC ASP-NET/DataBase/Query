-- Criando a tabela de Status (substituindo ENUM)
CREATE TABLE Status (
    id INT IDENTITY(1,1) PRIMARY KEY,
    nome VARCHAR(10) NOT NULL
);

-- Inserir valores possíveis na tabela de Status
INSERT INTO Status (nome) VALUES ('ativo'), ('inativo');

-- Tabela 3
CREATE TABLE tabela3 (
    id INT IDENTITY(1,1) PRIMARY KEY,
    status_id INT,  -- Referência à tabela Status
    atualizado_em DATETIME,
    FOREIGN KEY (status_id) REFERENCES Status(id)  -- Chave estrangeira para garantir que o status seja 'ativo' ou 'inativo'
);

-- Inserindo dados na tabela1
INSERT INTO tabela1 (nome) VALUES ('Registro1'), ('Registro2'), ('Registro3');

-- Inserindo dados na tabela2
INSERT INTO tabela2 (descricao, valor) VALUES ('Descricao1', 10.50), ('Descricao2', 20.75), ('Descricao3', 30.00);

-- Inserindo dados na tabela3 com referência à tabela Status
-- 1 = 'ativo' e 2 = 'inativo'
INSERT INTO tabela3 (status_id, atualizado_em) VALUES 
    (1, '2025-01-01 12:00:00'),  -- 'ativo'
    (2, '2025-01-02 14:00:00'),  -- 'inativo'
    (1, '2025-01-03 16:00:00');  -- 'ativo'

